<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ttwin.forfarmer.InformationActivity"
    android:weightSum="1"
    android:background="@drawable/skybackgroud">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="@string/typeofJob"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            tools:text="@string/typeofJob"
            android:layout_weight="0.13"
            android:gravity="center"
            android:textSize="24sp" />

        <Spinner
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:layout_weight="0.02" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="@string/salary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_weight="0.98"
            android:gravity="center"
            android:textSize="24sp" />

        <EditText
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_weight="0.02" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <CheckBox
            android:text="@string/accomodation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/checkBox"
            android:layout_weight="0.55" />

        <CheckBox
            android:text="@string/Food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/checkBox2"
            android:layout_weight="1.71" />

        <CheckBox
            android:text="@string/health"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/checkBox3"
            android:layout_weight="1.00" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <TextView
            android:text="@string/hperday"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="24sp" />

        <Spinner
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <EditText
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="Enter Job Start Date"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText5"
            android:hint="Enter Job End Date"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:text="@string/addlocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:text="@string/btusave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
